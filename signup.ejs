<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign-up - Topsify</title>
    <link rel="stylesheet" href="/styles/signup.css">
    <script>
        function addPhoneNumberField() {
            const phoneNumbersDiv = document.getElementById('phone-numbers');
            const newPhoneDiv = document.createElement('div');
            newPhoneDiv.className = 'form-group';
            
            const fieldID = 'phone-' + Date.now(); // Unique ID for each phone field
            
            newPhoneDiv.id = fieldID;
            newPhoneDiv.innerHTML = `
                <label for="new-phone">Phone Number:</label>
                <input type="tel" name="phone[]" pattern="[0-9]{10}" required placeholder="1234567890">
                <button type="button" onclick="removePhoneNumberField('${fieldID}')">Remove</button>
            `;
            phoneNumbersDiv.appendChild(newPhoneDiv);
        }

        function removePhoneNumberField(id) {
            const phoneDiv = document.getElementById(id);
            phoneDiv.remove();
        }
    </script>
</head>
<body>
    <div class="container">
        <h1>
            <p style="font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;">
                <% if (locals.message) { %>
                    <%= message %>
                <% } else { %>    
                    Create a new Account!
                <% } %>
            </p>
        </h1>
        <form id="signup-form" method="POST">
            <div class="form-group">
                <label for="new-email">E-Mail:</label>
                <input type="email" id="new-email" name="email" required placeholder="xyz@mail.com">
            </div>
            <div class="form-group">
                <label for="new-password">Password:</label>
                <input type="password" id="new-password" name="password" required>
            </div>
            <div class="form-group">
                <label for="new-username">Username:</label>
                <input type="text" id="new-username" name="username" required placeholder="ABC_10">
            </div>
            <div class="form-group">
                <label for="new-dob">Date of Birth:</label>
                <input type="date" id="new-dob" name="dob" required>
            </div>
            <!-- Section for phone numbers -->
            <div id="phone-numbers">
                <div class="form-group" id="initial-phone">
                    <label for="new-phone">Phone Number:</label>
                    <input type="tel" name="phone[]" pattern="[0-9]{10}" required placeholder="1234567890">
                </div>
            </div>
            <button type="button" onclick="addPhoneNumberField()">Add Another Phone Number</button>
            <br><br>
            <button type="submit" id="new-submit" name="submit">Submit</button>
        </form>
        <div class="switch-form">
            <p style="font-family:system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif">
                Already have an account?
                <a href="/login" class="login-button">Login</a>
            </p>
        </div>
    </div>
</body>
</html>
